{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "author": "@leonekmi",
    "version": "1.12",
    "permissions": [
        "*://www.crunchyroll.com/*",
        "*://www.wakanim.tv/*",
        "*://animedigitalnetwork.fr/*",
        "*://leonekmi.twittolabel.fr/*",
        "*://www.hulu.com/*",
        "*://www.netflix.com/*",
        "storage",
        "notifications"
    ],
    "options_ui": {
        "page" : "pages/options.html"
    },
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "anilist_scrobbler@leonekmi.twittolabel.fr",
            "strict_min_version": "42.0",
            "update_url": "https://leonekmi.twittolabel.fr/anilist-scrobble/updates.json"
        }
    },
    "background": {
        "scripts": ["jquery.js", "helpers.js", "updater.js", "bg.js"]
    },
    "browser_action": {
        "default_icon": "img/logo_al.png",
        "default_popup": "pages/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://leonekmi.twittolabel.fr/anilist-scrobble/*"],
            "js": ["jquery.js", "anilist_auth.js"]
        },
        {
            "matches": ["*://leonekmi.twittolabel.fr/anilist-scrobble-altcallback/*"],
            "js": ["jquery.js", "anilist_auth_alternative.js"]
        },
        {
            "matches": ["*://www.crunchyroll.com/*"],
            "js": ["jquery.js", "apis/anilist.js", "apis/kitsu.js", "helpers.js", "websites/crunchyroll.js"]
        },
        {
            "matches": ["*://www.wakanim.tv/*"],
            "js": ["jquery.js", "apis/anilist.js", "apis/kitsu.js", "helpers.js", "websites/wakanim.js"]
        },
        {
            "matches": ["*://animedigitalnetwork.fr/*"],
            "js": ["jquery.js", "apis/anilist.js", "apis/kitsu.js", "helpers.js", "websites/adn.js"]
        },
        {
            "matches": ["*://www.hulu.com/*"],
            "js": ["jquery.js", "apis/anilist.js", "apis/kitsu.js", "helpers.js", "websites/hulu.js"]
        },
        {
            "matches": ["*://www.netflix.com/*"],
            "js": ["jquery.js", "apis/anilist.js", "apis/kitsu.js", "helpers.js", "websites/netflix.js"]
        }
    ],
    "icons": {
        "128": "img/logo_al.png"
    }
}
